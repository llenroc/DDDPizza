<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,800' rel='stylesheet' type='text/css'>
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <span style="font-weight: 800;font-size: 20px;color: #FFF;font-family: 'Open Sans', sans-serif;">DDD Pizza</span>
                <a href="@Url.Action("Index","Home")" style="padding-right: 50px;">
                    <img width="85" src="@Url.Content("~/Content/img/PizzaLogo.png")" alt="DDD Pizza" />

                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li id="home">@Html.ActionLink("Home", "Index", "Home")</li>
                    <li id="order">@Html.ActionLink("Add Order", "NewOrder", "Home")</li>
                    <li id="bread">@Html.ActionLink("Bread", "Index", "Bread")</li>
                    <li id="cheese">@Html.ActionLink("Cheese", "Index", "Cheese")</li>
                    <li id="sauce">@Html.ActionLink("Sauce", "Index", "Sauce")</li>
                    <li id="topping">@Html.ActionLink("Topping", "Index", "Topping")</li>
                    <li id="size">@Html.ActionLink("Sizes", "Index", "Size")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - DDD Pizza Inc.</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/app")
    @RenderSection("scripts", required: false)
</body>
</html>
