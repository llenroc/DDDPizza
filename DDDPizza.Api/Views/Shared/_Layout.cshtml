<!DOCTYPE html>
<html ng-app="dddPizza" ng-cloak>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href='http://fonts.googleapis.com/css?family=Trade+Winds' rel='stylesheet' type='text/css'>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="work-spinner">
        <img src="@Url.Content("~/Content/img/spinner.gif")" alt="Loading" />
    </div>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <span class="site-title">DDD</span><span class="site-title-2">PizZa</span>
                <img width="85" src="@Url.Content("~/Content/img/PizzaLogo.png")" alt="DDD Pizza" />

            </div>
            <div class="navbar-collapse collapse pull-right" data-ng-init="init()" ng-controller="navigationController as nav" ng-cloak>
                <ul class="nav navbar-nav">
                    <li>
                        <a ui-sref="current" ui-sref-active="active-link">
                            <i class="fa fa-list"></i>
                            Current Orders
                        </a>
                    </li>
                    <li>
                        <a ui-sref="past" ui-sref-active="active-link">
                            <i class="fa fa-th-large"></i>
                            Past Orders
                        </a>
                    </li>
                    <li>
                        <a ui-sref="order" ui-sref-active="active-link">
                            <i class="fa fa-plus"></i>
                            Add Order
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - DDD Pizza, a family business =)</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/app")
    @RenderSection("scripts", required: false)


</body>
</html>
